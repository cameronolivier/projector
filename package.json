{
  "name": "projector",
  "version": "0.1.0",
  "description": "Smart CLI tool for discovering and managing development projects with intelligent status tracking, recursive scanning, and beautiful table output. Automatically detects project types (Node.js, Python, Rust, Go, PHP, Java) and analyzes project status from tracking files.",
  "main": "dist/index.js",
  "bin": {
    "projector": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc --project tsconfig.json --outDir dist && node scripts/copy-templates.js",
    "clean": "rm -rf dist oclif.manifest.json",
    "link": "pnpm link --global",
    "unlink": "pnpm unlink --global",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:check": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "check:changeset": "node scripts/check-changeset.js",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "prepare": "husky install",
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cli",
    "project-management",
    "development-tools",
    "project-tracking"
  ],
  "author": "Cam",
  "license": "MIT",
  "dependencies": {
    "@oclif/core": "^4.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "glob": "^11.0.0",
    "inquirer": "^12.9.4",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@changesets/cli": "^2.27.9",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>"
    ],
    "watchman": false,
    "moduleNameMapper": {
      "^(\\.\\.?/.*)\\.js$": "$1"
    }
  },
  "files": [
    "dist"
  ],
  "oclif": {
    "bin": "projector",
    "dirname": "projector",
    "commands": "./dist/commands",
    "plugins": [],
    "topicSeparator": " ",
    "default": "list"
  }
}
